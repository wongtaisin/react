{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "types": ["vite/client"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    // "allowImportingTsExtensions": true, // ❌ 删除这一行
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    // "noEmit": true, // ❌ 删除这一行
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    // "erasableSyntaxOnly": true, // ❌ "erasableSyntaxOnly" 是无效选项！
    "exactOptionalPropertyTypes": true, // ✅ 启用严格可选属性
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src/**/*.tsx", "src/**/*.ts", "src/**/*.d.ts", "./types/auto-imports.d.ts"],
  "exclude": ["node_modules"]
}
